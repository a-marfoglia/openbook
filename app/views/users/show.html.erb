<% provide(:title, @user.name) %>
<div class="container" id="profile">
  <div class="user-pic-container">
    <%= image_tag @user.picture.small.url, alt: "Immagine del profilo", class: 'pull-right' %><br>
    <% if correct_user? %>
      <span>Cambia immagine</span>
      <%= form_for(current_user, url: picture_upload_path(current_user)) do |f| %>
      <div class="hiddenfile">
        <%= f.file_field :picture %>
      </div>
      <% end %>
      <script>
        /* autosubmit */
        input = $('#user_picture');
        input.change(function(){
          if (input.val() != "")
            input.closest('form').submit();
        });
        /* apre l'input file utilizzando lo span */
        $('.user-pic-container span').click(function(){
          input.trigger('click');
        });
      </script>
    <% end %>
  </div>
  <%= @user.name %><br>
  <%= @user.email %><br>
</div>
