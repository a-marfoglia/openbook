<!-- start of image-->
  <header id="f-section1"></header>
  <!-- end of image-->

  <!-- start of forum-nav-->
  <section id="f-section2" class="col-xs-12 text-center">
	  <div class="hidden-xs hidden-sm hidden-md col-xs-1">
	    <%= link_to microposts_path do %>
  	    <%= image_tag image_path('logo.jpg') %>
  	  <% end %>
	  </div>
	  <div class="hidden-xs hidden-sm hidden-md col-xs-3 dropdown">
	    <a data-toggle="dropdown" href="#">Aggiunti di recente</a>
	    <b class="caret"></b>
	    <ul class="dropdown-menu" role="menu">
		  <li role="presentation">
		    <a role="menuitem" tabindex="-1" href="#">Aggiunti di recente</a>
		  </li>
		  <li role="presentation">
		    <a role="menuitem" tabindex="-2" href="#">Pi√π visti</a>
		  </li>
		  <li role="presentation">
		    <a role="menuitem" tabindex="-3" href="#">Internazionali</a>
		  </li>
	    </ul>
	  </div>
	  <div class="col-xs-12 col-sm-6 col-lg-4">
	    <%= content_tag :div, class: 'input-group' do %>
		    <input type="text" class="form-control" placeholder="Ricerca racconto..">   
		    <%= content_tag :span, (content_tag :i, nil, class: 'glyphicon glyphicon-search'), class: 'input-group-addon' %>
      <% end %>    
	  </div>
	  <div class="col-xs-8 col-sm-5 col-lg-3 text-center">
      <% if logged_in? %>
        <%= link_to new_micropost_path, class: 'btn' do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          Scrivi racconto
        <% end %>
      <% end %>
	  </div>
	  <div class="col-xs-3 col-sm-1 avatar">
	    <%= image_tag current_user.picture.thumb.url, alt: 'Immagine del profilo' if logged_in? %>
	  </div>
  </section>
<!-- end of forum-nav -->
			      
		     
